// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects Project[]

  @@map("users")
}

enum Role {
  ADMIN
  USER
  VIEWER
}

model Project {
  id          String      @id @default(uuid())
  name        String
  description String?
  userId      String
  environment Environment @default(DEVELOPMENT)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKeys          ApiKey[]
  schema           ProjectSchema?
  context          ProjectContext?
  usage            ApiUsage[]
  chatMessages     ChatMessage[]
  trainingExamples TrainingExample[]
  userFeedback     UserFeedback[]
  conversations    Conversation[]

  @@map("projects")
}

enum Environment {
  DEVELOPMENT
  STAGING
  PRODUCTION
}

model ApiKey {
  id         String    @id @default(uuid())
  key        String    @unique
  name       String
  projectId  String
  scopes     Scope[]
  rateLimit  Int       @default(1000)
  isActive   Boolean   @default(true)
  expiresAt  DateTime?
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

enum Scope {
  QUERY_GENERATION
  CHATBOT
  ANALYTICS
  PREDICTIONS
  ADMIN
}

model ProjectSchema {
  id               String          @id @default(uuid())
  projectId        String          @unique
  schemaText       String          @db.Text
  schemaSummary    String          @db.Text
  tables           Json
  dialect          DatabaseDialect
  connectionString String?         @db.Text
  isAutoDiscovery  Boolean         @default(false)
  lastSyncedAt     DateTime?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_schemas")
}

// Project Context - AI-generated + manual context for better responses
model ProjectContext {
  id                String   @id @default(uuid())
  projectId         String   @unique
  
  // AI-generated context from schema analysis
  aiGeneratedContext String?  @db.Text
  contextSummary     String?  @db.Text
  
  // Manual JSON context (best practices, business rules, examples)
  manualContextJson  Json?
  
  // Suggestion prompts
  initialPrompts     Json? // Array of initial suggestion prompts
  followUpTemplates  Json? // Templates for follow-up suggestions
  
  // Metadata
  lastAiGeneratedAt  DateTime?
  lastManualUpdateAt DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_contexts")
}

enum DatabaseDialect {
  POSTGRESQL
  MYSQL
  SQLITE
}

model ApiUsage {
  id           String   @id @default(uuid())
  projectId    String
  endpoint     String
  model        String?
  tokensUsed   Int      @default(0)
  responseTime Int
  success      Boolean  @default(true)
  errorMessage String?  @db.Text
  metadata     Json?
  createdAt    DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@map("api_usage")
}

model ChatMessage {
  id             String      @id @default(uuid())
  conversationId String
  projectId      String
  role           MessageRole
  content        String      @db.Text
  metadata       Json?
  createdAt      DateTime    @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("chat_messages")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// RAG Training Data - Store successful Q&A pairs for learning
model TrainingExample {
  id          String   @id @default(uuid())
  projectId   String
  question    String   @db.Text
  answer      String   @db.Text
  sqlQuery    String?  @db.Text
  chartConfig Json?
  context     Json // Stores schema snapshot, domain info, etc.
  quality     Int      @default(0) // Quality score 0-100
  verified    Boolean  @default(false) // Admin verified example
  successful  Boolean  @default(true) // SQL executed successfully
  userRating  Int? // Optional 1-5 star rating
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, quality])
  @@index([projectId, createdAt])
  @@map("training_examples")
}

// User Feedback - Track what users find helpful
model UserFeedback {
  id        String   @id @default(uuid())
  messageId String // ChatMessage ID
  projectId String
  rating    Int // -1 (thumbs down), 0 (neutral), 1 (thumbs up)
  stars     Int? // Optional 1-5 star rating
  helpful   Boolean  @default(true)
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([projectId, rating])
  @@map("user_feedback")
}

// Conversation Context - Track full conversations for better learning
model Conversation {
  id        String   @id @default(uuid())
  projectId String
  title     String?
  metadata  Json? // Domain, tags, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@map("conversations")
}
